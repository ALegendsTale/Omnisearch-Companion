{
    "manifest_version": 2,
    "name": "Omnisearch Companion",
    "version": "1.0",
  
    "description": "Display relevant search results from the Obsidian Omnisearch plugin.",

    "content_scripts": [
      {
        "matches": [ "<all_urls>" ],
        "js": [
          "content_scripts/cScript.ts"
        ]
      }
    ],

    "background": {
      "scripts": ["background_scripts/bgScript.ts"],
      "persistent": true
    },
  
    "icons": {
      "256": "../icons/obsidian-256.png"
    },

    "permissions": [
      "activeTab", 
      "storage"
    ],

    "browser_action": {
      "default_icon": "../icons/obsidian-256.png",
      "default_title": "Omnisearch Companion",
      "default_popup": "popup/popup.html"
    }
  }
  